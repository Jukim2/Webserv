server {
	listen       8888;
	server_name  localhost;

	location ^ / {
		root   html;
		index  index.html index.htm;
	}

	location ^ /directory {

		alias   YoupiBanane;
		index  youpi.bad_extension;

		error_page   404 /404.html;
	}
	
	location ^ /auto {
		allow_methods GET;

		root html;
		autoindex on;
	}

	location ^ /google {
		proxy_pass http://www.google.com;
	}

	error_page   500 502 503 504  /50x.html;
	location = /50x.html {
		root   html;
	}
}
